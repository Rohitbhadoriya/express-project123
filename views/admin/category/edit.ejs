  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <h1>Hello Rohit</h1>
    <div class="card">
        <div class="card-header">
          <h3 class="card-title">Update Category</h3>
          
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form action="/admin/updatecategory/<%=d._id%>" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label>Name</label>
                  <input type="text" value="<%=d.name%>" name="name" class="form-control" required>
                </div>
                <div class="form-group">
                  <label>Images</label>
                  <input type="file" value="<%=d.name%>" name="image" class="form-control" required><br>
                  <img src="<%=d.image.url%>" alt="" width="100">
                </div>
                
                <button class="btn btn-success">Update</button>
              </form> <!--Form end-->
        </div>
        <!-- /.card-body -->
      </div>
