
<%- include ('../header.ejs') %>
<%- include ('../sidebar.ejs') %>
 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <h1>Hello Rohit</h1>
    <div class="card">
        <div class="card-header">
          <h3 class="card-title">Edit Property</h3>
          
        </div>
        <!-- /.card-header -->
        <div class="card-body mx-auto" style="width: 500px;">
            <form action="/admin/updateproperty/<%=d._id %>" method="post" enctype="multipart/form-data" >
                <div class="form-group">
                  <label>Name</label>
                  <input type="text" value="<%= d.name%>" name="name" class="form-control" required>
                </div>
                <div class="form-group">
                  <label>Address</label>
                  <textarea class="form-control" name="address"><%= d.address%></textarea>
                </div>
                <div class="form-group">
                  <label>Category</label>
                  <input type="text" value="<%= d.category%>" name="category" class="form-control" required>
                </div>
                <div class="form-group">
                  <label>Price</label>
                  <input type="text" value="<%= d.price%>"name="price" class="form-control" required>
                </div>
                <div class="form-group">
                  <label>Size</label>
                  <input type="text" value="<%= d.size%>" name="size" class="form-control" required>
                </div>
                <div class="form-group">
                  <label>Image</label>
                  <input type="file" name="image" class="form-control">
                </div>
                <img src="<%= d.image.url%>" alt="" width="100">

                <button class="btn btn-success">Update</button>
              </form> <!--Form end-->
        </div>
        <!-- /.card-body -->
      </div>
      <!--Modal tag Start -->
      
      <!-- /.modal -->
      <!-- /.card -->
    </div>

  <!-- /.content-wrapper -->


  <%- include ('../footer.ejs') %>

